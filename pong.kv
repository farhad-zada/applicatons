#:kivy 1.0.9

<PongBall>:
    size: 70, 70
    canvas:
        Color:
            rgba: 1, .1, .5, 1
        Ellipse:
            pos: self.pos
            size: self.size 

<PongPaddle>:
    size: 60, 300
    canvas:
        Color:
            rgba: 0.1, 0.45, 0.573838, 1.0
        Ellipse:
            pos: self.pos
            size: self.size

<PongGame>:

    ball: pong_ball
    player1: player_left
    player2: player_right


    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            pos: self.center_x -300, self.center_y -300
            size: 600 , 600 
            source: 'image.jpg'
            angle_start: 0
            angle_end: 360
        Color:
            rgba: .1, 1, 1, 1
        Ellipse:
            pos: self.center_x -290, self.center_y -290
            size: 580 , 580 
            source: 'image.jpg'
            angle_start: 0
            angle_end: 360
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            pos: self.center_x -100, self.center_y - 100
            size: 200 , 200 
            source: 'image.jpg'
            angle_start: 0
            angle_end: 360
        Color:
            rgba: .1, 1, 1, 1
        Ellipse:
            pos: self.center_x -90, self.center_y - 90
            size: 180 , 180 
            source: 'image.jpg'
            angle_start: 0
            angle_end: 360
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.center_x -5, 0
            size: 10, self.height
        Ellipse:
            pos: self.center_x - 20, self.center_y - 20
            size: 40, 40

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
    
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
